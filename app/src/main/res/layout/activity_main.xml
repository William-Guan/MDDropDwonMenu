<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="williamguan.com.dropdmenu.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layoutManager="LinearLayoutManager" />

    <williamguan.com.library.MaterialDropMenu
        android:id="@+id/materialDropMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menuCloseUpIcon="@drawable/icon_triangle_up"
        app:menuExpandingIcon="@drawable/icon_triangle_down" />

</FrameLayout>
